<!-- views/signup.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title || 'Sign Up - MedAssist' %></title>
  <!-- Responsive Meta Tag -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Link to External CSS -->
  <link rel="stylesheet" href="/css/styles.css">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600&display=swap" rel="stylesheet">
  <!-- Font Awesome for Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
  <!-- Meta Tags for SEO -->
  <meta name="description" content="Sign up for MedAssist, your trusted virtual medical assistant for instant advice, appointment bookings, and personalized health tips.">
  <meta name="keywords" content="Medical, Chatbot, Health, Assistant, Sign Up">
  <meta name="author" content="Your Name or Company">
  <!-- Favicon -->
  <link rel="icon" href="/favicon.ico" type="image/x-icon">
</head>

<body>

  <!-- Header -->
  <header>
    <!-- Navigation Bar -->
    <nav class="navbar">
      <div class="container">
        <!-- Logo -->
        <a href="/" class="logo" id="medassist-link">MedAssist</a>
        <!-- Navigation Menu -->
        <ul class="nav-menu">
          <li><a href="/">Home</a></li>
          <li><a href="/#features">Services</a></li>
          <li><a href="/#testimonials">Testimonials</a></li>
          <li><a href="/#contact">Contact</a></li>
          <% if (username) { %>
            <li><a href="/dashboard">Dashboard</a></li>
            <li><a href="/logout">Logout</a></li>
          <% } else { %>
            <li><a href="/login">Login</a></li>
            <li><a href="/signup">Sign Up</a></li>
          <% } %>
        </ul>
        <!-- Mobile Menu Toggle -->
        <span class="menu-toggle"><i class="fas fa-bars"></i></span>
      </div>
    </nav>
  </header>

  <!-- Sign Up Section -->
  <section class="registration-section">
    <div class="container">
      <!-- Registration Form -->
      <div class="registration-form">
        <h2>Sign Up</h2>
        <form action="/signup" method="POST">
          <!-- Username -->
          <div class="form-group">
            <input type="text" name="username" placeholder="Username" required>
          </div>
          <!-- Email -->
          <div class="form-group">
            <input type="email" name="email" placeholder="Email" required>
          </div>
          <!-- Password -->
          <div class="form-group">
            <input type="password" name="password" placeholder="Password" required>
          </div>
          <!-- Confirm Password -->
          <div class="form-group">
            <input type="password" name="confirmPassword" placeholder="Confirm Password" required>
          </div>
          <!-- Submit Button -->
          <button type="submit" class="btn btn-primary">Sign Up</button>
        </form>
        <!-- Already Registered -->
        <p class="already-registered">Already registered? <a href="/login">Login</a></p>
      </div>
    </div>
  </section>

  <!-- JavaScript Files -->
  <script src="/js/script.js"></script>
</body>
</html>
